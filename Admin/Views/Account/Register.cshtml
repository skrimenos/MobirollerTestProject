@model MobirollerTestProject.DataAccess.ViewModels.RegisterViewModel

@inject LanguageService lang

<div class="col-md-5">

    <h2>@lang.GetKey("Register")</h2>

    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Email"></label><br />
            <input type="text" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label><br />
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label><br />
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="form-group">
            <input type="submit" value="@lang.GetKey("Register")" class="btn btn-primary" />
        </div>
    </form>
</div>