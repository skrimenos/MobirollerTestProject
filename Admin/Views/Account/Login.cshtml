@model MobirollerTestProject.DataAccess.ViewModels.LoginViewModel

@inject LanguageService lang
<div class="col-md-5">
    <h2>@lang.GetKey("Login")</h2>


    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input type="text" asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <label>Language</label>
            <select class="form-control" name="language">
                <option value="tr-TR">Turkish</option>
                <option value="it-IT">Italian</option>
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="@lang.GetKey("Login")" class="btn btn-outline-dark" />
            <a asp-action="Register" asp-controller="Account" class="btn btn-outline-info">@lang.GetKey("Register")</a>
        </div>
    </form>
</div>